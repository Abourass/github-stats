{
  "name": "github-stats",
  "version": "2.0.0",
  "description": "Generate visualizations of GitHub user and repository statistics",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "pnpm build && node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "github",
    "stats",
    "visualization",
    "svg",
    "github-actions"
  ],
  "author": "Antonio Bourassa",
  "license": "GPL-3.0",
  "dependencies": {
    "@octokit/graphql": "^8.1.1",
    "@octokit/rest": "^21.0.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.8.4",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "github-stats": {
    "omitRepos": [
      "AssetVal/AssetVal",
      "chakrimsc/Legacy-WebApp",
      "RockyMtGQ/SnapShot-iOS-app",
      "RockyMtGQ/SnapShot-Android-app",
      "Abourass/avm-snapshot-app-android",
      "AssetVal/android-snapshot-update",
      "Abourass/foundry-ai"
    ],
    "extra-stats": true
  }
}
